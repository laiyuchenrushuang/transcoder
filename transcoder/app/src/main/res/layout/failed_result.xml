<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/result_failed_toolbar" />


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/failed_result"/>
    <TextView
        style="@style/error_tishi"
        android:text="无效的二维码\n请重新扫描！"
        android:layout_marginTop="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <Button
        android:id="@+id/button_again1"
        style="@style/button_again"
        android:layout_width="200dp"
        android:layout_height="42dp"
        android:text="@string/scan_again"
        android:layout_marginTop="@dimen/dp33"
        android:background="@drawable/button_again"/>

</LinearLayout>
</LinearLayout>
</RelativeLayout>